generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   String   @unique
  name      String?
  ens       String?
  website   String?
  twitter   String?
  wechat    String?
  discord   String?
  message   String?
  nonce     Int?
  avatarURI String?
  status    Int      @default(0)
  assets    Asset[]
}

model Asset {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  assetKey     String      @unique
  tokenId      String?
  imageURI     String?
  collection   Collection? @relation(fields: [collectionId],references: [id])
  collectionId Int?
  owner        User?       @relation(fields: [userId], references: [id])
  userId       Int?
  status       Int         @default(0)
}

model Collection {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   String   @unique
  tokenURI  String
  imageURI  String?
  name      String
  website   String?
  discord   String?
  twitter   String?
  opensea   String?
  looksrare String?
  assets    Asset[]
  status    Int      @default(0)
}

model Bayc {
  tokenId           Int        @id
  apecoinClaimed    Boolean    @default(false)
  m1mutated         Boolean    @default(false)
  m2mutated         Boolean    @default(false)
}

model Mayc {
  tokenId           Int        @id
  apecoinClaimed    Boolean    @default(false)
  minted            Boolean    @default(false)
}

model Bakc {
  tokenId           Int        @id
  apecoinClaimed    Boolean    @default(false)
  minted            Boolean    @default(false)
}